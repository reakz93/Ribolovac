<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginBottom="2dp"
        android:background="#d1e8f7">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_weight="2"
            style="@style/Divider"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:background="#d1e8f7">

            <ImageView
                android:layout_height="100dp"
                android:id="@+id/list_item_album_slika"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:background="@android:drawable/picture_frame"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:layout_marginLeft="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_album_naziv_text_view"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:text="naziv"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center"/>

                <TextView
                    android:text="xx,xx kg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_album_tezina_text_view"
                    android:layout_weight="2"
                    android:textSize="18sp"
                    android:gravity="right|center_vertical"
                    android:layout_gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="4dp">

                <TextView
                    android:text="Lokacija: "
                    android:layout_width="wrap_content"
                    android:id="@+id/list_item_album_lokacija_label"
                    android:layout_height="wrap_content"
                    android:textStyle="normal|bold"
                    android:textSize="12sp"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/list_item_album_lokacija_text_view"
                    android:text="Album lokacija"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>